---
import Layout from '../components/layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormationCard from '../components/FormationCard.astro';
import type { Formation } from '../types/formation';
import { formationsParCategorie } from '../data/formations';
import { formationsPart6 } from '../data/formations-part6';

const categoryLabels: Record<string, string> = {
  'non-electricien': 'Personnel Non-Électricien',
  'interventions-bt': 'Interventions Basse Tension',
  'electricien-bt': 'Électricien Basse Tension',
  'haute-tension': 'Haute Tension',
  'recyclage': 'Recyclages'
};

const categoryIcons: Record<string, string> = {
  'non-electricien': 'from-blue-500 to-blue-700',
  'interventions-bt': 'from-orange-500 to-orange-700',
  'electricien-bt': 'from-orange-600 to-red-600',
  'haute-tension': 'from-yellow-400 to-yellow-600',
  'recyclage': 'from-green-500 to-green-700'
};

const categoryDescriptions: Record<string, string> = {
  'non-electricien': 'Pour les professionnels réalisant des travaux non électriques dans un environnement à risque électrique',
  'interventions-bt': 'Pour les opérations simples et manœuvres sur installations basse tension',
  'electricien-bt': 'Pour les professionnels qualifiés intervenant sur installations électriques BT',
  'haute-tension': 'Pour les opérations sur installations haute tension HTA',
  'recyclage': 'Formations de recyclage obligatoires tous les 3 ans pour maintenir les habilitations'
};
---

<Layout 
  title="Catalogue de Formations - Habilitelec Formations" 
  description="Toutes nos formations aux habilitations électriques conformes NF C18-510. Personnel non-électricien, interventions BT, électricien BT, haute tension, recyclages."
>
  <Header />

  <!-- Hero Section -->
  <section class="section-navy text-white py-16 md:py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6">
          Catalogue de Formations
        </h1>
        <p class="text-xl text-blue-100 mb-8">
          Découvrez toutes nos habilitations électriques conformes NF C18-510
        </p>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 inline-block">
          <p class="text-lg mb-4">
            Formations initiales et recyclages disponibles en <strong>intra-entreprise</strong> ou <strong>inter-entreprises</strong>
          </p>
          <div class="flex flex-wrap gap-4 justify-center text-sm">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Certifié Qualiopi</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Formateurs experts</span>
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Évaluation pratique incluse</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Navigation rapide -->
  <section class="py-8 bg-white border-b border-gray-200 sticky top-0 z-40 shadow-sm">
    <div class="container mx-auto px-4">
      <div class="flex flex-wrap gap-3 justify-center">
        {Object.keys(categoryLabels).map((category) => (
          <a 
            href={`#${category}`}
            class="px-4 py-2 bg-gray-100 hover:bg-blue-100 rounded-lg text-gray-700 hover:text-blue-900 font-semibold transition-colors"
          >
            {categoryLabels[category]}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Catalogue détaillé -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      
      <!-- Sections par catégories principales -->
      {Object.entries(formationsParCategorie).map(([categoryKey, formations]) => (
        <div id={categoryKey} class="mb-20 max-w-7xl mx-auto scroll-mt-24">
          
          <!-- En-tête catégorie -->
          <div class="mb-10">
            <div class="flex items-center gap-3 mb-4">
              <div class={`w-12 h-12 bg-gradient-to-br ${categoryIcons[categoryKey]} rounded-xl flex items-center justify-center`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
                {categoryLabels[categoryKey]}
              </h2>
            </div>
            <p class="text-lg text-gray-600 ml-15">
              {categoryDescriptions[categoryKey]}
            </p>
          </div>

          <!-- Grille de formations -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {formations.map((formation: Formation) => (
              <FormationCard formation={formation} />
            ))}
          </div>

        </div>
      ))}

      <!-- Section Recyclages (Nouvelle) -->
      <div id="recyclage" class="mb-20 max-w-7xl mx-auto scroll-mt-24">
        
        <!-- En-tête catégorie -->
        <div class="mb-10">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-green-500 to-green-700 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900">
              Recyclages
            </h2>
          </div>
          <p class="text-lg text-gray-600 ml-15">
            Formations de recyclage obligatoires tous les 3 ans pour maintenir les habilitations
          </p>
        </div>

        <!-- Grille des recyclages -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          {formationsPart6.map((formation: Formation) => (
            <FormationCard formation={formation} />
          ))}
        </div>

      </div>

    </div>
  </section>
  
  <!-- Section informations complémentaires -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Informations pratiques
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          
          <!-- Modalités -->
          <div class="card-pro p-6">
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              Intra-entreprise
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              Formation dans vos locaux, adaptée à vos installations et à votre planning
            </p>
            <ul class="text-sm text-gray-600 space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-blue-800">•</span>
                <span>Groupe de 1 à 12 personnes</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-blue-800">•</span>
                <span>Dates flexibles</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-blue-800">•</span>
                <span>Sur mesure</span>
              </li>
            </ul>
          </div>
          
          <!-- Inter-entreprises -->
          <div class="card-pro p-6">
            <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-orange-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              Inter-entreprises
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              Formation en centre avec d'autres participants, tarif par personne
            </p>
            <ul class="text-sm text-gray-600 space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-orange-800">•</span>
                <span>Inscription individuelle</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-orange-800">•</span>
                <span>Calendrier établi</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-orange-800">•</span>
                <span>Réseau partenaires</span>
              </li>
            </ul>
          </div>
          
          <!-- Recyclage -->
          <div class="card-pro p-6">
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">
              Recyclage
            </h3>
            <p class="text-gray-600 text-sm mb-4">
              Maintien et actualisation des compétences tous les 3 ans
            </p>
            <ul class="text-sm text-gray-600 space-y-2">
              <li class="flex items-start gap-2">
                <span class="text-green-800">•</span>
                <span>Obligatoire tous les 3 ans</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-800">•</span>
                <span>Durée réduite</span>
              </li>
              <li class="flex items-start gap-2">
                <span class="text-green-800">•</span>
                <span>Tarifs préférentiels</span>
              </li>
            </ul>
          </div>
          
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Final -->
  <section class="py-16 bg-gradient-to-br from-blue-900 to-blue-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Besoin d'un conseil pour choisir ?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Contactez-nous pour un accompagnement personnalisé<br />
          <strong>Réponse sous 48h ouvrées</strong>
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-white text-blue-900 px-8 py-4 rounded-lg font-bold hover:shadow-2xl transition-all hover:scale-105">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Demander un devis
          </a>
          <a href="tel:0635252465" class="inline-flex items-center justify-center gap-2 bg-white/10 backdrop-blur-sm text-white border-2 border-white px-8 py-4 rounded-lg font-bold hover:bg-white/20 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            06 35 25 24 65
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>