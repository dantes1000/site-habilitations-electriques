---
import Layout from '../../components/layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import BreadcrumbNav from '../../components/BreadcrumbNav.astro';
import PricingBox from '../../components/PricingBox.astro';
import ProgramAccordion from '../../components/ProgramAccordion.astro';
import FAQAccordion from '../../components/FAQAccordion.astro';
import { getFormationBySlug, getAllFormationSlugs } from '../../data/formations';

// IMPORTANT: Cette fonction DOIT être exportée pour les routes dynamiques
export async function getStaticPaths() {
  const slugs = getAllFormationSlugs();
  return slugs.map(slug => ({
    params: { slug }
  }));
}

const { slug } = Astro.params;
const formation = getFormationBySlug(slug as string);

if (!formation) {
  return Astro.redirect('/formations');
}

const badgeColors: Record<string, string> = {
  blue: 'badge-info',
  orange: 'badge-bt',
  'orange-dark': 'badge-bt',
  yellow: 'badge-ht',
  green: 'bg-green-100 text-green-800'
};

const categoryLabels: Record<string, string> = {
  'non-electricien': 'Personnel Non-Électricien',
  'interventions-bt': 'Interventions Basse Tension',
  'electricien-bt': 'Électricien Basse Tension',
  'haute-tension': 'Haute Tension',
  'autres': 'Autres Formations'
};
---

<Layout 
  title={`${formation.title} - Habilitelec Formations`}
  description={formation.metaDescription}
>
  <Header />
  
  <!-- Breadcrumb -->
  <BreadcrumbNav 
    items={[
      { label: 'Formations', href: '/formations' },
      { label: categoryLabels[formation.category], href: '/formations' },
      { label: formation.code }
    ]}
  />
  
  <!-- Hero Section -->
  <section class="section-navy text-white py-16 md:py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto">
        
        <!-- Badge + Code -->
        <div class="flex items-center gap-3 mb-6">
          <span class={`${badgeColors[formation.color]} text-lg`}>
            {formation.code}
          </span>
          <span class="text-blue-200 text-sm">
            {categoryLabels[formation.category]}
          </span>
        </div>
        
        <!-- Titre -->
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          {formation.title}
        </h1>
        
        <!-- Description courte -->
        <p class="text-xl text-blue-100 mb-8 leading-relaxed">
          {formation.shortDesc}
        </p>
        
        <!-- Infos rapides -->
        <div class="flex flex-wrap gap-4 mb-8">
          <div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>{formation.duration.initial}</span>
          </div>
          <div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.040A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
            <span>Conforme NF C18-510</span>
          </div>
          <div class="flex items-center gap-2 bg-white/10 backdrop-blur-sm px-4 py-2 rounded-lg">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>Certifié Qualiopi</span>
          </div>
        </div>
        
        <!-- CTA -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a href="/contact" class="btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
            Demander un devis gratuit
          </a>
          <a href="tel:0635252465" class="btn-outline">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            06 35 25 24 65
          </a>
        </div>
        
      </div>
    </div>
  </section>
  
  <!-- Contenu principal -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 max-w-7xl mx-auto">
        
        <!-- Colonne principale (2/3) -->
        <div class="lg:col-span-2 space-y-12">
          
          <!-- Vue d'ensemble -->
          <div class="card-pro p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6">Vue d'ensemble</h2>
            <div class="space-y-4 text-gray-700 leading-relaxed">
              {formation.longDesc.map(paragraph => (
                <p>{paragraph}</p>
              ))}
            </div>
          </div>
          
          <!-- Objectifs pédagogiques -->
          <div class="card-pro p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Objectifs pédagogiques
            </h2>
            <ul class="space-y-3">
              {formation.objectives.map(objective => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-green-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-gray-700 leading-relaxed">{objective}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Programme détaillé -->
          <div class="card-pro p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              Programme détaillé
            </h2>
            <ProgramAccordion modules={formation.program} />
          </div>
          
          <!-- Public concerné -->
          <div class="card-pro p-8 bg-gradient-to-br from-orange-50 to-amber-50">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-orange-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              Public concerné
            </h2>
            <p class="text-gray-700 mb-6 leading-relaxed">
              {formation.publicConcerne.description}
            </p>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              {formation.publicConcerne.metiers.map(metier => (
                <div class="flex items-start gap-2 bg-white rounded-lg p-3">
                  <svg class="w-5 h-5 text-orange-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span class="text-sm text-gray-700">{metier}</span>
                </div>
              ))}
            </div>
          </div>
          
          <!-- Méthodologie -->
          <div class="card-pro p-8">
            <h2 class="text-3xl font-bold text-gray-900 mb-6 flex items-center gap-3">
              <svg class="w-8 h-8 text-blue-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
              </svg>
              Méthodes pédagogiques
            </h2>
            <ul class="space-y-3">
              {formation.methodologie.map(methode => (
                <li class="flex items-start gap-3">
                  <svg class="w-6 h-6 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                  </svg>
                  <span class="text-gray-700 leading-relaxed">{methode}</span>
                </li>
              ))}
            </ul>
          </div>
          
          <!-- Stats si disponibles -->
          {formation.stats && (
            <div class="card-pro p-8 bg-gradient-to-br from-green-50 to-emerald-50">
              <h2 class="text-3xl font-bold text-gray-900 mb-6">Nos résultats</h2>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                {formation.stats.satisfaction && (
                  <div class="text-center">
                    <div class="text-4xl font-bold text-green-800 mb-2">
                      {formation.stats.satisfaction}%
                    </div>
                    <p class="text-gray-700 font-semibold">Taux de satisfaction</p>
                  </div>
                )}
                {formation.stats.reussite && (
                  <div class="text-center">
                    <div class="text-4xl font-bold text-green-800 mb-2">
                      {formation.stats.reussite}%
                    </div>
                    <p class="text-gray-700 font-semibold">Taux de réussite</p>
                  </div>
                )}
                {formation.stats.formes && (
                  <div class="text-center">
                    <div class="text-4xl font-bold text-green-800 mb-2">
                      {formation.stats.formes}+
                    </div>
                    <p class="text-gray-700 font-semibold">Personnes formées</p>
                  </div>
                )}
              </div>
            </div>
          )}
          
          <!-- FAQ -->
          {formation.faq.length > 0 && (
            <FAQAccordion faqs={formation.faq} />
          )}
          
        </div>
        
        <!-- Sidebar (1/3) -->
        <div class="lg:col-span-1">
          <PricingBox 
            duration={formation.duration}
            pricing={formation.pricing}
            prerequisites={formation.prerequisites}
            recyclageFrequency={formation.recyclageFrequency}
            certification={formation.certification}
          />
        </div>
        
      </div>
    </div>
  </section>
  
  <!-- CTA Final -->
  <section class="py-16 bg-gradient-to-br from-blue-900 to-blue-800 text-white">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Prêt à vous former ?
        </h2>
        <p class="text-xl text-blue-100 mb-8">
          Demandez votre devis personnalisé gratuit<br />
          <strong>Réponse sous 48h ouvrées</strong>
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-2 bg-white text-blue-900 px-8 py-4 rounded-lg font-bold hover:shadow-2xl transition-all hover:scale-105">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Demander un devis
          </a>
          <a href="/formations" class="inline-flex items-center justify-center gap-2 bg-white/10 backdrop-blur-sm text-white border-2 border-white px-8 py-4 rounded-lg font-bold hover:bg-white/20 transition-all">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
            Voir toutes les formations
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <Footer />
</Layout>