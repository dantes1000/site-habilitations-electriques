      <script>
        // Animation des compteurs - Version corrig√©e TypeScript
        document.addEventListener('DOMContentLoaded', () => {
          const counters = document.querySelectorAll('.stat-number');
          
          const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
              if (entry.isIntersecting && entry.target instanceof HTMLElement) {
                const counter = entry.target;
                const dataCount = counter.getAttribute('data-count');
                
                // V√©rifier que l'attribut existe et est un nombre valide
                if (!dataCount) return;
                
                const target = parseFloat(dataCount);
                if (isNaN(target)) return;
                
                const duration = 2000;
                const step = target / (duration / 16);
                let current = 0;
                
                const updateCounter = () => {
                  current += step;
                  if (current < target) {
                    // Convertir en cha√Æne de caract√®res
                    counter.textContent = Math.floor(current).toString();
                    requestAnimationFrame(updateCounter);
                  } else {
                    // Formater le nombre avec d√©cimal si n√©cessaire
                    let finalValue: string;
                    if (target % 1 !== 0) {
                      finalValue = target.toFixed(1);
                    } else {
                      finalValue = Math.floor(target).toString();
                    }
                    counter.textContent = finalValue;
                  }
                };
                
                updateCounter();
                observer.unobserve(counter);
              }
            });
          }, { threshold: 0.5 });
          
          counters.forEach(counter => {
            if (counter instanceof HTMLElement) {
              observer.observe(counter);
            }
          });
        });
